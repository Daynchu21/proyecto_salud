{
  "expo": {
    "name": "proyectosaludapp",
    "slug": "proyectosaludapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/icon_1024.png",
    "scheme": "proyectosaludapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icons/icon_1024.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Necesitamos acceder al micrófono para grabar mensajes de voz.",
        "NSLocationWhenInUseUsageDescription": "Necesitamos acceder a tu ubicación para mostrar tu posición.",
        "NSLocationAlwaysUsageDescription": "Se requiere acceso a la ubicación incluso en segundo plano."
      },
      "bundleIdentifier": "com.daynchu20.proyectosaludapp",
      "runtimeVersion": {
        "policy": "appVersion"
      },
      "buildNumber": "1"
    },
    "android": {
      "icon": "./assets/icons/icon_1024.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/icon_1024.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "process.env.GOOGLE_MAPS_API_KEY"
        }
      },
      "package": "com.daynchu20.proyectosaludapp",
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icons/favicon_48.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/alerta.mp3"
          ]
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Permitir que $(PRODUCT_NAME) acceda al micrófono."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*",
      "assets/alerta.mp3"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "50525bba-4d50-4097-b119-be4f6112bc17"
      },
      "apiStatusUrl": "https://back-status-salud.fly.dev",
      "analyticsEnabled": false
    },
    "owner": "daynchu20",
    "updates": {
      "url": "https://u.expo.dev/50525bba-4d50-4097-b119-be4f6112bc17"
    }
  }
}
